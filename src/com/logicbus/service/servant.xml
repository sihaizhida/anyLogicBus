<?xml version="1.0" encoding="UTF-8"?>
<catalog name="root">
	<catalog name="core">
		<service 
			id = "ServiceDetailQuery" 
			name="ServiceDetailQuery" 
			note="查询指定的服务信息" 
			visible="protected" 
			module="com.logicbus.service.ServiceDetailQuery">
			
		    <arguments>
		       	<argu id="service" isOption="false" getter="Default" parameters=""/> 
		    </arguments>
		    
		</service>
			
		<service 
			id="GC" 
			name="内存回收服务" 
			note="主动触发虚拟机回收内存" 
			visible="protected" 
			module="com.logicbus.service.GC"
		/>
		<service 
			id="ServiceReload" 
			module="com.logicbus.service.ServiceReload" 
			name="ServiceReload" 
			note="重新装入服务缓冲池"
			visible="protected"
		/>	
		<service 
			id="ServicePause" 
			module="com.logicbus.service.ServicePause" 
			name="ServicePause" 
			note="暂停服务"
			visible="protected"
		/>	
		<service 
			id="ServiceResume" 
			module="com.logicbus.service.ServiceResume" 
			name="ServiceResume" 
			note="恢复服务"
			visible="protected"
		/>
		<service 
			id="ServiceQuery" 
			name="ServiceQuery" 
			note="查询系统中所部署的所有服务"
			visible="protected"
			module="com.logicbus.service.ServiceQuery"
		/>
		<service 
			id="AclQuery" 
			name="AclQuery" 
			note="查询当前的访问控制列表"
			visible="protected"
			module="com.logicbus.service.AclQuery"
		/>
		<catalog name="manager">
			<service 
				id="AssetQuery" 
				name="AssetQuery" 
				note="查询服务信息"
				visible="protected"
				module="com.logicbus.manager.monitor.service.AssetQuery"
			/>
			<service 
				id="DataSourceQuery" 
				name="DataSourceQuery" 
				note="查询数据源信息"
				visible="protected"
				module="com.logicbus.service.DataSourceQuery"
			/>			
			<service 
				id="CellQuery" 
				name="CellQuery" 
				note="查询节点信息"
				visible="protected"
				module="com.logicbus.manager.monitor.service.CellQuery"
			/>	
			<service 
				id="GetCatalogServices" 
				name="GetCatalogServices" 
				note="获取指定路径下的服务列表"
				visible="protected"
				module="com.logicbus.manager.metadata.service.GetCatalogServices"
			/>		
			<service 
				id="GetServantCatalog" 
				name="GetServantCatalog" 
				note="获取当前的服务目录"
				visible="protected"
				module="com.logicbus.manager.metadata.service.GetServantCatalog"
			/>	
			<service 
				id="GetServiceDesc" 
				name="GetServiceDesc" 
				note="获取指定服务的服务描述"
				visible="protected"
				module="com.logicbus.manager.metadata.service.GetServiceDesc"
			/>		
			<service 
				id="NodeQuery" 
				name="NodeQuery" 
				note="查询节点信息"
				visible="protected"
				module="com.logicbus.manager.monitor.service.NodeQuery"
			/>		
			<service 
				id="SettingsQuery" 
				name="SettingsQuery" 
				note="查询节点的环境变量"
				visible="protected"
				module="com.logicbus.manager.monitor.service.NodeSettingsQuery"
			/>											
		</catalog>
	</catalog>
	<catalog name="demo">
		<catalog name="logicbus">
			<service 
				id="AreYouAlive" 
				name="AreYouAlive" 
				note="查询服务器是否可用" 
				visible="public"
				module="com.logicbus.service.AreYouAlive"
			/>
			<service
				id="Helloworld"
				name="Helloworld"
				note="Hello world,我的第一个Logicbus服务"
				visible="public"
				module="com.logicbus.service.Helloworld"
			>
				<properties>
					<parameter id="welcome" value="北京欢迎你."/>
				</properties>
			</service>
			<service id="HelloJSON"
				name="HelloJSON"
				note="HelloJSON ,我的第一个Logicbus服务。"
				visible="public"
				module="com.logicbus.service.HelloJSON"
			/>			
		</catalog>
	</catalog>
</catalog>